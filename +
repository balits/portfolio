import React, { WheelEvent } from "react";
import Image from "next/image";
import { motion } from "framer-motion";
import { useRef } from "react";
import normalizeWheel from "normalize-wheel";

export const Tech = () => {
  const marqueeRef = useRef<HTMLDivElement>(null);
  const scrollX = useRef(0);

  function onWheel(e: WheelEvent<HTMLDivElement>) {
    const norm = normalizeWheel();
    scrollX.current = 3;
  }

  return (
    <section className="blackOnWhite relative w-full h-[50vh] flex flex-col  gap-28 items-center justify-center">
      <motion.div
        ref={marqueeRef}
        drag="x"
        dragConstraints={{ left: 0, right: 0 }}
        onWheel={onWheel}
        className="w-screen flex items-center justify-between overflow-x-hidden"
      >
        <Image
          src={"/logo_1.svg"}
          height={70}
          width={70}
          alt="react"
          className="object-center"
        />
        <Image src={"/logo_2.svg"} height={60} width={60} alt="svelte" />
        <Image
          src={"/logo_3.svg"}
          height={60}
          width={60}
          alt="typescript"
          className="object-center"
        />
        <Image
          src={"/tailwind.svg"}
          height={70}
          width={70}
          alt="tailwindcss"
          className="object-center"
        />
        <Image
          src={"/logo_5.svg"}
          height={80}
          width={80}
          alt="rust"
          className="object-center"
        />
        <Image
          src={"/logo_4.svg"}
          height={100}
          width={100}
          alt="go"
          className="object-center"
        />
        <Image
          src={"/git.svg"}
          height={60}
          width={60}
          alt="git"
          className="object-center"
        />
      </motion.div>
    </section>
  );
};
